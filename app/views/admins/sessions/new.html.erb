

	
  <%=  form_for :session, url: admins_sessions_path ,method: :post, local: true do |b| %>
  <div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>Admin</b>Login</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
<%= flash[:notice] %>
    

    <!-- <form action="../../index2.html" method="post"> -->
      <div class="form-group has-feedback">
        <!-- <input type="email" class="form-control" placeholder="Email"> -->
        <%= b.text_field :email,class: "form-control",placeholder: "Email" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <!-- <input type="password"  placeholder="Password"> -->
        <%= b.password_field :password ,class: "form-control",placeholder: "Password"  %>
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <%= b.label :captcha %> :
  <%= session[:captcha] %>
<p>
  <%= b.label :"Enter the captcha here" %> :
    
    <%= b.text_field :captcha ,placeholder: "Captcha"   %>
 
  </p>
       
      </div>
      <div class="row">
                  <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember Me
            </label>
         
        </div>
        <!-- /.col -->
     
          <!-- <button type="submit" >Sign In</button> -->
            <%= b.submit "Sign In" ,class: "btn btn-primary btn-block btn-flat" %>
          <% end %>
      
        <!-- /.col -->
      </div>
    <!-- </form> -->

    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign in using
        Facebook</a>
      <a href="/auth/google_oauth2" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign in using
        Google+</a>

        <a href="/auth/google_oauth2" class="btn btn-block btn-social btn-github btn-flat"><i class="fa fa-github"></i> Sign in using
        Github</a>
    </div>

    <!-- /.social-auth-links -->

    <a href="#">I forgot my password</a><br>


  </div>
