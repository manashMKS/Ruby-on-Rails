
  <div class="login">

<%=  form_for :session, url: users_sessions_path	, method: :post, local: true do |b| %>

  <div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>User</b>Login</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
<p id="notice"><%= flash[:notice]%> </p>

    

    <!-- <form action="../../index2.html" method="post"> -->
      <div class="form-group has-feedback">
        <!-- <input type="email" class="form-control" placeholder="Email"> -->
        <%= b.text_field :email,class: "form-control",placeholder: "Email" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <!-- <input type="password"  placeholder="Password"> -->
        <%= b.password_field :password ,class: "form-control",placeholder: "Password"  %>
         <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>   
        <%= b.label :captcha %> :
  <%= session[:captcha] %>
<p>
  <%= b.label :"Enter the captcha here" %> :
  <%= b.text_field :captcha ,placeholder: "Captcha"   %>
 
  </p>
       
      
      <div class="row">
  
          
            <label>
              <input type="checkbox"> Remember Me
            </label>

    
        <!-- /.col -->
       
          <!-- <button type="submit" >Sign In</button> -->

            <%= b.submit "Sign In" ,class: "btn btn-primary btn-block btn-flat" %>

          <% end %>
          <%= link_to "New Registration", new_users_user_path ,class: "btn btn-primary btn-block btn-flat" %>
        <!-- /.col -->
      </div>
    <!-- </form> -->
  <center><%= link_to "forgot password", new_users_password_reset_path %></center>
    <div class="social-auth-links text-center">
