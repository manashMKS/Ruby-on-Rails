<h1>Forgot password</h1>
<div>
<%= flash[:notice] %>
</div> 
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: users_password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Submit" %>
    <% end %>
  </div>
</div>